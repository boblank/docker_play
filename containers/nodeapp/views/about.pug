extends layout

block content
  link(rel='stylesheet', href='/stylesheets/scrollhide.css')

  .nopad
    div
      .col-sm-4.col-md-3.underNav
        .scrollable
          .inner-scroll
            .about-info
              each val, index in data.about
                if val.class === "italic"
                  p.italic= val.text

                else

                  p= val.text
      .divider.col-sm-1.col-md-1.hidden-xs.col-sm-offset-4.col-md-offset-3
        .line
      .col-sm-1.col-md-1.hidden-xs
      .insta.col-lg-8.col-md-8.col-sm-7
        .scrollable
          .inner-scroll.pad-top
            each val, index in data.projects
                .col-sm-6.col.xs-12.topgutter
                  .flex.flexcol
                      a(href='/project/'+val.title).nota
                        if val.photos.length !== 0
                          img(src=""+val.photos[0].path).thmb
